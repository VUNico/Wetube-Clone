header.header
    .header__column
        a(href=routes.home)
            i.fab.fa-youtube
        h1 #{siteName}
    .header__column
        form(action=routes.search, method="GET")
            input(type="text", name="term", placeholder="Search by a term...")    
            input(type="submit", value="search")
    .header__column
        if !user.isAuthenticated
            ul
                li
                    a(href=routes.join) Join
                li
                    a(href=routes.login) Log In
        else 
            ul 
                li
                    a(href=routes.userDetail(user.id)) User Detail
                li
                    a(href=routes.videos+routes.upload) Upload Videos
                li
                    a(href=routes.logout) Log Out
        
        